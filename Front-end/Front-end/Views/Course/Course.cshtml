@{
    //ViewData["Courses"] = "Courses";
    var courses = ViewData["Courses"] as IEnumerable<Course>;
}
<!-- Courses Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row mx-0 justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center position-relative mb-5">
                    <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">Our Courses</h6>
                    <h1 class="display-4">Checkout New Releases Of Our Courses</h1>
                </div>
            </div>
        </div>
        <div class="row">
            
            @foreach (var item in courses)
            {
                <div class="col-lg-4 col-md-6 pb-4">
                    <a class="courses-list-item position-relative d-block overflow-hidden mb-2" href="detail.html">
                        <img class="img-fluid" src="~/content/img/courses-1.jpg" alt="">
                        <div class="courses-text">
                            <h4 class="text-center text-white px-3">
                                @item.Title
                            </h4>
                            <div class="border-top w-100 mt-3">
                                <div class="d-flex justify-content-between p-4">
                                    <span class="text-white"><i class="fa fa-user mr-2"></i>@item.StartDate</span>
                                    <span class="text-white">
                                        <i class="fa fa-star mr-2"></i>@item.EndDate
                                        <small>(250)</small>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
            
        </div>
    </div>
</div>
<!-- Courses End -->